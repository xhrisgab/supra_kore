extends layout 

block content 
    h1 #{article.title}
    form(method='POST', action='/view/edit/'+article._id)
        #form-group
            label Title:
            input.form-control(name='title', type='text', value=article.title)
        #form-group
            label Author:
            input.form-control(name='author', type='text', value=article.author)
        #form-group
            label Body:
            textarea.form-control(name='body')= article.body
        br
        input.btn.btn-outline-secondary(type='submit', value='Submit')