extends layout 

block content
    h1= article.title
    h5 Written by #{article.author} 
    p=article.body 
    br
    p.fs-10.fw-lighter updated at: #{article.updatedAt}
    hr
    a.btn.btn-secondary(href='/view/edit/'+article._id) Edit!
    | 
    a.btn.btn-outline-danger(href='#' data-id=article._id onclick="deleteArticle('"+article._id+"')") Delete!
